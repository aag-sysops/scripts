cd $inbound_dir

echo -e "\nMove $local_file to $hcmdir_in"
mv -fv $local_file $hcmdir_in
touch $hcmdir_in/$tagin

	result=$?

	if [ $result -ne 0 -o -f $local_file ]; then
	echo -e "\nMove $localfile to $hcmdir_in failed, contact Production Services.\n"
  	exit 8
	fi
